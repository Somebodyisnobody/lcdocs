          xsi:schemaLocation="https://clonkspot.org ../../../clonk.xsd" xml:lang="de">
  <func isAsync="false">
    <title>DoWealth</title>
    <category>Spieler</category>
    <versions><version>4.9.7.0 CR</version></versions>
    <syntax>
      <rtype isReference="false">bool</rtype>
      <params>
        <param isReference="false" isOptional="false"><type>int</type><name>iPlr</name><desc>Spielernummer des Spielers, dessen Vermögen verändert werden soll</desc></param>
        <param isReference="false" isOptional="false"><type>int</type><name>iValue</name><desc>Wert, welcher dem Vermögen hinzuaddiert werden soll.</desc></param>
      </params>
    </syntax>
    <desc>Fügt iValue zum Vermögen eines Spielers hinzu. Abzug ist mittels negativen Werten möglich.</desc>
    <examples>
      <example>
        <code>DoWealth(5, 60);</code>
        <text>Gibt dem 6. Spieler 60 Clunker.</text>
      </example>
    </examples>
    <related>
      <funcLink>GetWealth</funcLink>
	  <funcLink>SetWealth</funcLink>
    </related>
  </func>
