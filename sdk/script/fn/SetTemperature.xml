	<func>
		<title>SetTemperature</title>
		<category>Umwelt/Wetter</category>
		<versions><version>4.6.5.0 CP</version></versions>
		<syntax>
			<rtype>void</rtype>
			<params>
				<param><type>int</type><name>iTemperature</name><desc>Temperatur von -100 bis 100.</desc></param>
			</params>
		</syntax>
		<desc>Setzt die globale Temperatur.</desc>
		<examples>
			<example>
				<code>SetTemperature(-100);
				</code>
				<text>Schockfrostet die Landschaft.</text>
			</example>
		</examples>
		<related>
			<funclink>GetTemperature</funclink>
		</related>
	</func>
