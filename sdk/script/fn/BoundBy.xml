          xsi:schemaLocation="https://clonkspot.org ../../../clonk.xsd" xml:lang="de">
  <func isAsync="false">
    <title>BoundBy</title>
    <category>Arithmetik</category>
    <versions><version>4.6.5.0 CP</version></versions>
    <syntax>
      <rtype isReference="false">int</rtype>
      <params>
        <param isReference="false" isOptional="false"><type>int</type><name>iVal</name><desc>Zu vergleichende Zahl</desc></param>
        <param isReference="false" isOptional="false"><type>int</type><name>iRange1</name><desc>Untere Grenze</desc></param>
        <param isReference="false" isOptional="false"><type>int</type><name>iRange2</name><desc>Obere Grenze</desc></param>
      </params>
    </syntax>
    <desc>Gibt iVal zurück, wenn der Wert innerhalb der Grenzen liegt (iVal &gt;= iRange1 und iVal &lt;= iRange2). Andernfalls wird die jeweils nächstliegende Grenze zurückgegeben.</desc>
    <related>
      <funcLink>Inside</funcLink>
      <funcLink>LessThan</funcLink>
      <funcLink>GreaterThan</funcLink>
    </related>
  </func>
  <author>jwk</author><date>2002-04</date>
</clonkDoc>
